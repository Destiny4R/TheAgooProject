@page
@model TheAgooProjectWeb.Pages.Admin.ManageClass.UpsertModel
@{
    ViewData["Title"] = Model._class.Id > 0 ? "Update Class" : "Add Class";
    var btnname = Model._class.Id > 0 ? "Update" : "Add";
    string check = "", nocheck ="";
    if (Model._class.Id > 0)
    {
        if (Model._class.Elective)
        {
            check = "checked";
            nocheck = "";
        }
        else
        {
            check = "";
            nocheck = "checked";
        }
    }
    else
    {
        nocheck = "checked";
    }
}
<div class="page-content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <div class=" badge text-white bg-blue text-uppercase"><strong class="h5">@ViewData["Title"]</strong></div>
                        <div><a class="btn btn-dark btn-sm" asp-page="Index"><i class="fa fa-arrow-left"></i>&ensp; Back</a></div>
                    </div>
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <strong><i class="fas fa-exclamation-triangle"></i> </strong> @TempData["error"].
                        </div>
                    }
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group row">
                            <label for="example-text-input" class="col-md-4 col-form-label">Class Name</label>
                            <div class="col-md-8">
                                <input class="form-control" type="text" asp-for="_class.Name" required />
                                <span asp-validation-for="_class.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <h5 class="font-size-14 col-sm-4 mb-3">Class Result Type</h5>
                            <div class="col-sm-8">
                                <div class="custom-control custom-radio mb-2">
                                    <input type="radio" id="customRadio1" name="customRadio" @check class="custom-control-input" value="Cando">
                                    <label class="custom-control-label" for="customRadio1">Elective Class</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="customRadio2" name="customRadio" @nocheck class="custom-control-input" value="Cannot">
                                    <label class="custom-control-label" for="customRadio2">Non-Elective Class</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-10 offset-md-2">
                                <button class="btn btn-primary" type="submit">@btnname</button>
                            </div>
                        </div>
                        <input type="hidden" asp-for="_class.Id" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
