@page
@model TheAgooProjectWeb.Pages.Admin.ManageSubject.UpsertModel
@{
    ViewData["Title"] = Model.subjects.Id > 0 ? "Update Subject" : "Add Subject";
    var btnname = Model.subjects.Id > 0 ? "Update" : "Add";
}
<div class="page-content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between">
                        <div class=" badge text-white bg-blue text-uppercase"><strong class="h5">@ViewData["Title"]</strong></div>
                        <div><a class="btn btn-dark btn-sm" asp-page="Index"><i class="fa fa-arrow-left"></i>&ensp; Back</a></div>
                    </div>
                    @if (TempData["error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <strong><i class="fas fa-exclamation-triangle"></i> </strong> @TempData["error"].
                        </div>
                    }
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group row">
                            <label for="example-text-input" class="col-md-2 col-form-label">Subject</label>
                            <div class="col-md-10">
                                <input class="form-control" type="text" asp-for="subjects.Name" required />
                                <span asp-validation-for="subjects.Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-10 offset-md-2">
                                <button class="btn btn-primary" type="submit">@btnname</button>
                            </div>
                        </div>
                        <input type="hidden" asp-for="subjects.Id" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
